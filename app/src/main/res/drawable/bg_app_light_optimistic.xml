<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:endColor="#F2F7FF"
                android:startColor="#FDFBFF"
                android:type="linear" />
        </shape>
    </item>

    <item android:gravity="top|end">
        <shape android:shape="rectangle">
            <size
                android:height="900dp"
                android:width="900dp" />
            <gradient
                android:centerX="0.78"
                android:centerY="0.10"
                android:endColor="#00FFD89A"
                android:gradientRadius="520dp"
                android:startColor="#4DFFD89A"
                android:type="radial" />
        </shape>
    </item>

    <item android:gravity="bottom|start">
        <shape android:shape="rectangle">
            <size
                android:height="900dp"
                android:width="900dp" />
            <gradient
                android:centerX="0.16"
                android:centerY="0.86"
                android:endColor="#00A8FFE0"
                android:gradientRadius="560dp"
                android:startColor="#40A8FFE0"
                android:type="radial" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D000000" />
        </shape>
    </item>
</layer-list>
