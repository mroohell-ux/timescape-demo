<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base: soft sky gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#FDFBFF"
            android:endColor="#F2F7FF"/>  <!-- airy blue -->
        </shape>
    </item>

    <!-- Warm sun glow (top-right) -->
    <item android:gravity="top|end">
        <shape android:shape="rectangle">
            <size android:width="900dp" android:height="900dp"/>
            <gradient
                android:type="radial"
                android:centerX="78%"
                android:centerY="10%"
                android:gradientRadius="520dp"
                android:startColor="#4DFFD89A"
            android:endColor="#00FFD89A"/>
        </shape>
    </item>

    <!-- Fresh mint bloom (bottom-left) -->
    <item android:gravity="bottom|start">
        <shape android:shape="rectangle">
            <size android:width="900dp" android:height="900dp"/>
            <gradient
                android:type="radial"
                android:centerX="16%"
                android:centerY="86%"
                android:gradientRadius="560dp"
                android:startColor="#40A8FFE0"
            android:endColor="#00A8FFE0"/>
        </shape>
    </item>

    <!-- Very subtle veil to keep content readable on bright devices -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D000000"/> <!-- ~5% black -->
        </shape>
    </item>
</layer-list>
