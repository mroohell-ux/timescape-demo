<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- angled highlight sweeping across the card -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#40FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#00000000"
                android:angle="315"/>
        </shape>
    </item>

    <!-- subtle caustic blob -->
    <item android:gravity="top|left">
        <shape android:shape="oval">
            <size android:width="220dp" android:height="120dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerColor="#21FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>
</layer-list>
