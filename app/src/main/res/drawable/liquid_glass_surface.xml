<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base translucent fill -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#26FFFFFF"/>
        </shape>
    </item>

    <!-- Soft vertical refraction -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#14FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Inner shadow to hint depth -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp"/>
            <gradient
                android:startColor="#1A000000"
                android:centerColor="#05000000"
                android:endColor="#00000000"
                android:angle="90"/>
        </shape>
    </item>

    <!-- Highlight stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="#3DFFFFFF"/>
        </shape>
    </item>
</layer-list>
