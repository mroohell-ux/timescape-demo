<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#1CFFFFFF" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#2AFFFFFF"
                android:centerColor="#0FFFFFFF"
                android:endColor="#05FFFFFF"
                android:angle="270" />
        </shape>
    </item>

    <item android:gravity="top">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#33FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00000000"
                android:angle="180" />
        </shape>
    </item>

    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp" />
            <gradient
                android:startColor="#1A000000"
                android:centerColor="#05000000"
                android:endColor="#00000000"
                android:angle="90" />
        </shape>
    </item>

    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#00000000"
                android:centerColor="#05000000"
                android:endColor="#11000000"
                android:angle="270" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#52FFFFFF" />
        </shape>
    </item>
</layer-list>
