<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/labelNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drawer_notes_tools"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerExportNotes"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/drawer_export_notes"
            app:iconGravity="textStart"
            app:iconTint="@color/flow_bar_stroke"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerExportCurrentFlow"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/drawer_export_current_flow"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="textStart"
            app:iconTint="@color/flow_bar_stroke"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerImportNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/drawer_import_notes"
            app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerShuffleAllCards"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/drawer_shuffle_all_cards"
            app:icon="@drawable/ic_shuffle"
            app:iconGravity="textStart"
            app:iconTint="@color/flow_bar_stroke"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/flow_bar_stroke"/>

        <TextView
            android:id="@+id/labelCardBackgrounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/drawer_card_backgrounds"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/drawerRecyclerImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerAddImages"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/drawer_add_images"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerClearImages"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/drawer_clear_images"
            android:textColor="@color/flow_bar_stroke"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/flow_bar_stroke"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelCardFontSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/drawer_card_font_size"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

            <TextView
                android:id="@+id/textCardFontSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderCardFontSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:valueFrom="14"
            android:valueTo="26"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/labelAppBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/drawer_app_background"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

        <ImageView
            android:id="@+id/imageAppBackgroundPreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/drawer_app_background_preview_desc"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerPickAppBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/drawer_pick_app_background"
            app:icon="@android:drawable/ic_menu_gallery"
            app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDrawerResetAppBackground"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/drawer_reset_app_background"/>

    </LinearLayout>
</ScrollView>
