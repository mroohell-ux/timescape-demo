<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <com.example.timescapedemo.HandwritingView
            android:id="@+id/handwritingView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/handwriting_card_content_desc"
            android:importantForAccessibility="no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonClearHandwriting"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_handwriting_clear"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/handwriting_canvas_size_label">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputCanvasSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/handwriting_canvas_format_label">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputCanvasFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/handwriting_canvas_background_label">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputCanvasBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/handwriting_brush_color_label">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputBrushColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textBrushSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/handwriting_brush_size_label"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <TextView
            android:id="@+id/textBrushSizeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderBrushSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="2"
            android:valueTo="18"
            android:stepSize="0.5"
            app:labelBehavior="gone"
            app:trackColorActive="?attr/colorPrimary"
            app:trackColorInactive="@android:color/darker_gray" />

    </LinearLayout>
</ScrollView>
