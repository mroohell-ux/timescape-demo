<?xml version="1.0" encoding="utf-8"?>
<com.example.timescapedemo.AspectRatioCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeColor="@color/card_glass_stroke"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.timescapedemo.RadialFadeImageView
            android:id="@+id/bgImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/liquidTint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/card_liquid_tint"
            android:alpha="0.28"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/centerGlow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/card_center_glow"
            android:alpha="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/highlight"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/card_highlight"
            android:alpha="0.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/liquidSheen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/card_liquid_sheen"
            android:alpha="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/liquidCaustic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/card_liquid_caustic"
            android:alpha="0.52"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/textScrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/text_scrim"
            app:layout_constraintStart_toStartOf="@id/card_content"
            app:layout_constraintEnd_toEndOf="@id/card_content"
            app:layout_constraintTop_toTopOf="@id/card_content"
            app:layout_constraintBottom_toBottomOf="@id/card_content" />

        <com.example.timescapedemo.MaxHeightLinearLayout
            android:id="@+id/card_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12h ago"
                android:textColor="#A7FFFFFF"
                android:textSize="12sp"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Contact"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeMaxTextSize="27sp"
                app:autoSizeStepGranularity="1sp" />

            <TextView
                android:id="@+id/snippet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Snippet"
                android:textSize="14sp"
                android:ellipsize="end" />
        </com.example.timescapedemo.MaxHeightLinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.example.timescapedemo.AspectRatioCardView>
