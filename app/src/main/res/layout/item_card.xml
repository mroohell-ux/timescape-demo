<?xml version="1.0" encoding="utf-8"?>
<com.example.timescapedemo.AspectRatioCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeWidth="0dp">

    <!-- ConstraintLayout so bg layer doesn't affect measured height -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Pure background image. We blur/adjust it in the adapter. No glass/tint here. -->
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/imageCardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_card_content_desc"
                android:scaleType="centerCrop"/>
        </FrameLayout>

        <!-- LOCAL scrim: very light, only beneath the text block for readability -->
        <View
            android:id="@+id/textScrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/text_scrim"
            app:layout_constraintStart_toStartOf="@id/card_content"
            app:layout_constraintEnd_toEndOf="@id/card_content"
            app:layout_constraintTop_toTopOf="@id/card_content"
            app:layout_constraintBottom_toBottomOf="@id/card_content" />

        <!-- Content drives height; LayoutManager caps to 2/3 screen -->
        <com.example.timescapedemo.MaxHeightLinearLayout
            android:id="@+id/card_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12h ago"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"/>

            <LinearLayout
                android:id="@+id/titleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <ImageButton
                    android:id="@+id/buttonSpeakTitle"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_title_speak"
                    android:tint="#FFFFFFFF"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/snippet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Snippet"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"
                android:ellipsize="end"/>
        </com.example.timescapedemo.MaxHeightLinearLayout>

        <ImageButton
            android:id="@+id/aiBadge"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_ai_badge"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/card_content"
            app:layout_constraintEnd_toEndOf="@id/card_content" />

        <FrameLayout
            android:id="@+id/handwritingContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/handwritingImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/handwriting_card_content_desc"
                android:scaleType="fitCenter"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.example.timescapedemo.AspectRatioCardView>
